<!doctype html>
<html lang='en'>
  <head>
    <title>MegaMek API</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-dark transparent navbar-expand-sm fixed-top">
        <%= link_to(image_pack_tag('mm_word_logo.png'), 'https://megamek.org') %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <ul class="navbar-nav mx-auto">
          <%= link_to 'API Home', root_url, class: 'nav-link nav-item' %>
          <%= link_to 'API Docs', docs_url, class: 'nav-link nav-item'  %>
          <%= link_to 'Registered Game Servers', servers_url, class: 'nav-link nav-item'  %>
        </ul>
      </div>
    </header>
    <div class='banner-image d-none d-sm-block d-sm-none d-md-block'></div>
    <main role="main">
      <div id="theme" class="theme-light">
        <div class="container top">
          <%= yield %>
        </div>
      </div>
    </main>
    <footer>
      <div class="container footer">
        <hr>
        <p>&copy; 2020 MegaMek</a></p>
      </div>
    </footer>
  </body>
</html>
