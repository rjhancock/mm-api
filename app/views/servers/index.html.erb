<p id="notice"><%= notice %></p>

<h1>Servers</h1>

<table>
  <thead>
    <tr>
      <th>Port</th>
      <th>Ip address</th>
      <th>Passworded</th>
      <th>Users</th>
      <th>Server key</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= server.port %></td>
        <td><%= server.ip_address %></td>
        <td><%= server.passworded %></td>
        <td><%= server.users %></td>
        <td><%= server.server_key %></td>
        <td><%= link_to 'Show', server %></td>
        <td><%= link_to 'Edit', edit_server_path(server) %></td>
        <td><%= link_to 'Destroy', server, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

